<div class="container">
  <h1>Add a Review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATINGS, prompt: "Select a rating" %>
  <%= f.submit "Add", class: "btn btn-primary mt-3" %>
  <% end %>

  <%= link_to "Back to #{@restaurant.name}", restaurant_path(@restaurant), class: "btn btn-secondary mt-3" %>
</div>
